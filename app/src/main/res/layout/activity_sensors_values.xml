                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Z-Axis: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/MagnetoCurrentZ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/RotVectSensor"
                android:text="Rotation Vector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/MagnetoSensorVals"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/RotVectSensorVals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/RotVectSensor"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="X-Axis: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/RotVectCurrentX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Y-Axis: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/RotVectCurrentY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Z-Axis: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/RotVectCurrentZ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Scalar Component: "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/RotVectScalar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/StepCountSensor"
                android:text="Step Counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/RotVectSensorVals"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_below="@+id/StepCountSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Steps Counted: "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/StepsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/StepDetectSensor"
                android:text="Step Detector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/StepCountSensor"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_below="@+id/StepDetectSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Step Detected: "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/StepsDetect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>